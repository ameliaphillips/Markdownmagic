---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="section">
  <h2 class="section-title">{title}</h2>
  <slot />
</section>

<style>
  .section {
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: 1.875rem;
    font-weight: 700;
    color: #2d3748;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #e2e8f0;
  }
</style>