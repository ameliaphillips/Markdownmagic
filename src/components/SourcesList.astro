---
interface Source {
  title: string;
  url: string;
}

interface Props {
  sources: Source[];
}

const { sources } = Astro.props;
---

<div class="sources">
  <p class="sources-title"><strong>Sources:</strong></p>
  <ul class="sources-list">
    {sources.map(source => (
      <li>
        <a href={source.url}>{source.title}</a>
      </li>
    ))}
  </ul>
</div>

<style>
  .sources {
    margin-top: 2rem;
    padding: 1.5rem;
    background-color: #f7fafc;
    border-radius: 0.5rem;
    border: 1px solid #e2e8f0;
  }

  .sources-title {
    margin-bottom: 1rem;
    color: #2d3748;
  }

  .sources-list {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }

  .sources-list li {
    margin-bottom: 0.75rem;
  }

  .sources-list li:last-child {
    margin-bottom: 0;
  }

  a {
    color: #4299e1;
    text-decoration: none;
    transition: color 0.2s;
  }

  a:hover {
    color: #2b6cb0;
  }
</style>